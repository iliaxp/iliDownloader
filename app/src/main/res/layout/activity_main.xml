<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/animated_gradient_background"
    tools:context=".MainActivity">

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Header Section with Logo and Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="40dp">

                <!-- App Logo with Glow Effect -->
                <FrameLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="24dp">

                    <!-- Glow Effect -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/icon2"
                        android:alpha="0.3" />

                    <!-- Main Logo -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon2"
                        android:contentDescription="App Icon"
                        android:padding="16dp" />

                </FrameLayout>

                <!-- App Title - Bold Font -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_title"
                    android:textColor="@color/on_primary"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/iransansbold"
                    android:layout_marginBottom="8dp" />

                <!-- App Subtitle - Light Font -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_subtitle"
                    android:textColor="@color/on_primary"
                    android:textSize="16sp"
                    android:alpha="0.9"
                    android:fontFamily="@font/iransanslight" />

            </LinearLayout>

            <!-- Main Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mainCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="32dp"
                app:cardElevation="16dp"
                app:cardBackgroundColor="@color/surface"
                app:strokeWidth="1dp"
                app:strokeColor="@color/outline_variant"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp">

                    <!-- Input Section - Medium Font -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/input_label"
                        android:textColor="@color/on_surface"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/iransansmedium" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/input_hint"
                        app:boxStrokeColor="@color/primary"
                        app:hintTextColor="@color/primary"
                        app:boxCornerRadiusTopStart="20dp"
                        app:boxCornerRadiusTopEnd="20dp"
                        app:boxCornerRadiusBottomStart="20dp"
                        app:boxCornerRadiusBottomEnd="20dp"
                        app:startIconDrawable="@drawable/ic_instagram"
                        app:startIconTint="@color/primary"
                        app:boxStrokeWidth="2dp"
                        app:boxStrokeWidthFocused="2dp"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textUri"
                            android:textSize="16sp"
                            android:textColor="@color/on_surface"
                            android:fontFamily="@font/iransans" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Download Button - Bold Font -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button"
                        android:layout_width="234dp"
                        android:layout_height="64dp"
                        android:layout_marginTop="32dp"
                        android:background="@drawable/button_ripple"
                        android:fontFamily="@font/iransansbold"
                        android:text="@string/download_button"
                        android:textColor="@color/on_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:cornerRadius="24dp"
                        app:icon="@drawable/ic_download"
                        app:iconGravity="textStart"
                        app:iconSize="24dp"
                        app:iconTint="@color/on_primary" />

                    <!-- Progress Section -->
                    <LinearLayout
                        android:id="@+id/progressSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <!-- Progress Label - Medium Font -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/progress_label"
                            android:textColor="@color/on_surface"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp"
                            android:fontFamily="@font/iransansmedium" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <ProgressBar
                                android:id="@+id/progressBar"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                android:layout_width="0dp"
                                android:layout_height="16dp"
                                android:layout_weight="1"
                                android:layout_marginEnd="16dp"
                                android:progressDrawable="@drawable/custom_progress_bar" />

                            <!-- Progress Text - Bold Font -->
                            <TextView
                                android:id="@+id/progressText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textColor="@color/primary"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:minWidth="48dp"
                                android:fontFamily="@font/iransansbold" />

                        </LinearLayout>

                        <!-- Status Text - Regular Font -->
                        <TextView
                            android:id="@+id/StatusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/progress_ready"
                            android:textColor="@color/on_surface_variant"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:fontFamily="@font/iransans" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Footer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Version Text - Medium Font -->
                <TextView
                    android:id="@+id/version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_version"
                    android:textColor="@color/on_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:alpha="0.8"
                    android:fontFamily="@font/iransansmedium" />

                <!-- Author Text - Light Font -->
                <TextView
                    android:id="@+id/author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/app_author"
                    android:textColor="@color/on_primary"
                    android:textSize="12sp"
                    android:alpha="0.7"
                    android:fontFamily="@font/iransanslight" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

